@model IEnumerable<RuedaYPata.Models.Hospedaje>

@{
    ViewData["Title"] = "Hospedajes";
}

<h1>Hospedajes Disponibles</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nuevo Hospedaje</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Precio por Día</th>
            <th>Ubicación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Descripcion</td>
            <td>@item.PrecioPorDia.ToString("C")</td>
            <td>@item.Ubicacion?.Nombre</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>