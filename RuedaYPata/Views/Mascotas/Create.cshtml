@model RuedaYPata.ViewModels.MascotaCreateViewModel
@{
    ViewData["Title"] = "Crear Mascota";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" type="number" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TipoAnimal" class="form-label"></label>
        <select asp-for="TipoAnimal" class="form-select" asp-items="Model.TiposAnimales">
            <option value="">-- Seleccione un tipo --</option>
        </select>
        <span asp-validation-for="TipoAnimal" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RazaId" class="form-label"></label>
        <select asp-for="RazaId" class="form-select" asp-items="Model.Razas">
            <option value="">-- Seleccione una raza --</option>
        </select>
        <span asp-validation-for="RazaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}